.prepend-top.prepend-1.span-22.append-1.append-bottom
  %h2 Select who you would like to send an email to:

.prepend-2.span-20.append-2.append-bottom
  = form_tag invite_contacts_path do
    = hidden_field_tag "imported_emails", @contacts.map{|c| c[:email]}.join(",")
    .contacts
      %table
        - @contacts.each_with_index do |c, i|
          %tr{:class => cycle('odd', 'even')}
            %td= check_box_tag "contact_#{i}", "1", true, :class => "contact_check"
            %td= c[:name]
            %td= c[:email]
    %p.selectors
      %small
        %em
          = link_to "[select all]", '#', :id => 'select_all'
          &nbsp;&nbsp;
          = link_to "[unselect all]", '#', :id => 'unselect_all'
    %p.buttons= submit_tag "Import Contacts"

